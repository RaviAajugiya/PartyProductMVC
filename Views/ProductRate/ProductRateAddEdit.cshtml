@model PartyProductMVC.Models.ProductRate
@{
    ViewBag.Title = "ProductRateAddEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ProductRateAddEdit</h2>

@using (Html.BeginForm("ProductRateSave", "ProductRate"))
{
    @Html.HiddenFor(model => model.ProductRateId)

    <div class="from-group">
        @Html.LabelFor(model => model.Product.ProductId, "Select Product", new { @class = "col-form-label" })
        @Html.DropDownListFor(model => model.Product.ProductId, new SelectList(ViewBag.Products, "ProductId", "ProductName"), "Select Product", new { @class = "form-control" })
    </div>
    <div class="from-group">
        @Html.LabelFor(model => model.Rate, new { @class = "col-form-label" })
        @Html.TextBoxFor(model => model.Rate, new { @class = "form-control" })
    </div>
    <div class="from-group">
        @Html.LabelFor(model => model.DateOfRate, new { @class = "col-form-label" })
        @Html.EditorFor(model => model.DateOfRate, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <button class="btn btn-info mt-4">Submit</button>
}